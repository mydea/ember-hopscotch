{{head-layout}}
{{title 'ember-site-tour'}}

<div class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <div class="navbar-toggle-wrapper visible-xs">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".js-navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      {{#link-to 'index' class="navbar-brand"}}ember-site-tour{{/link-to}}
    </div>
    <div class="collapse navbar-collapse js-navbar-collapse">
      <ul class="navbar-nav nav">
        <li>
          {{#link-to 'index'}}
            Getting Started
          {{/link-to}}
        </li>
        <li>
          {{#link-to 'defining-tours'}}
            Defining Tours
          {{/link-to}}
        </li>
        {{#bs-dropdown tagName="li"  as |dd|}}
          {{#dd.toggle}}
            Usage <span class="caret"></span>
          {{/dd.toggle}}
          {{#dd.menu}}
            <li>{{#link-to "usage.index"}}Overview{{/link-to}}</li>
            <li>{{#link-to "usage.mixin"}}RouteTour Mixin{{/link-to}}</li>
            <li>{{#link-to "usage.tour-start-button"}}tour-start-button Component{{/link-to}}</li>
            <li>{{#link-to "usage.tour-object"}}Tour Object{{/link-to}}</li>
            <li>{{#link-to "usage.service"}}TourManager Service{{/link-to}}</li>
          {{/dd.menu}}
        {{/bs-dropdown}}
        {{#bs-dropdown tagName="li" as |dd|}}
          {{#dd.toggle}}
            Examples <span class="caret"></span>
          {{/dd.toggle}}
          {{#dd.menu}}
            <li>{{#link-to "examples.simple"}}Basic Example{{/link-to}}</li>
            <li>{{#link-to "examples.engines"}}Usage in Engines{{/link-to}}</li>
            <li>{{#link-to "examples.tracking"}}Tracking Tour Performance{{/link-to}}</li>
            <li>{{#link-to "examples.tests"}}Test Helpers{{/link-to}}</li>
          {{/dd.menu}}
        {{/bs-dropdown}}
      </ul>
      <ul class="navbar-nav nav navbar-right">
        <li>
          <a href="https://github.com/mydea/ember-site-tour" target="_blank">
            View on Github
          </a>
        </li>

      </ul>
    </div>
  </div>
</div>
<div class="container">
  {{outlet}}
</div>